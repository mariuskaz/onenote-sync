doctype html
html
    head
        title Onenote Sync
        script(src="https://cdn.jsdelivr.net/npm/@microsoft/microsoft-graph-client/lib/graph-js-sdk.js")
        script(src="https://secure.aadcdn.microsoftonline-p.com/lib/1.0.0/js/msal.min.js")
        link(rel="stylesheet", href="style.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    body
        img.logo#logo1(src='images/onenote.png')
        .block
            #onenote User not logged
            button#logout(onclick="logout()") Logout
            h4 Notebook
            #notes
            h4 Section
            #sections
            h4 Page
            #pages
            h4.tasks Tasks
            .tip#todos 0
            #tasks
        br
        br

        img.logo#logo2(src='images/todoist.png')
        .block
            #todoist(style="display:inline-block;margin-right:20px") User not connected
            button#connect(onclick="document.getElementById('connection').style.display = 'block'") Connect
            button#disconnect(onclick="disconnect()") Disconnect
            h4 Projects
            #projects(style='display:inline-block;margin-right:10px')
            h4 Template
            input#template(style='width:350px', value='#notebook - #page: #todo', autocomplete='off') 
            br
            br
            button#export(onclick='createTasks()' disabled) Export tasks
        br
        br
        
        .dialog#connection
            i.material-icons.close-icon(onclick="document.getElementById('connection').style.display = 'none'") close
            label User name:
            br
            input#name(autocomplete='off')
            br
            label Todoist API token:
            br
            input#token
            .footer
                button(onclick="connect()") Connect

        .dialog#alert(style="height:110px;width:200px")
            h3#message(style="text-align:center") No message...
            .footer(style="text-align:center")
                button(style="width:80px;" onclick="document.getElementById('alert').style.display = 'none'") Close

        script(src='main.js')